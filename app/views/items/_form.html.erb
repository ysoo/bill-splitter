<%= form_with(model: [@bill, @bill.items.build ], local: true) do |form| %>
  <td><%= form.submit %></td>
  <td>
    <%= form.text_field :name, class: "input-group" %>
  </td>
  <td>
    <%= form.number_field :amount, class: "input-group" %>
  </td>
  <td>
    <%= form.collection_select :person_id, @bill.people, :id, :name %>
  </td>
<% end %>