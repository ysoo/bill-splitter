<div class="container">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Link</th>
      <th scope="col">People</th>
    </tr>
  </thead>
  <tbody>
    <% @bills.each_with_index do |bill, idx| %>
      <tr>
        <th scope="row"><%= idx + 1%></th>
        <td><%= bill.name %></td>
        <td><%= link_to 'Go', bill_path(bill) %> </td>
        <td><%= link_to 'People', bill_people_path(bill) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>